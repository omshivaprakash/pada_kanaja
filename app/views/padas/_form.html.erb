<%= form_for @pada, :html => { :class => "form-horizontal pada" } do |f| %>

  <% if @pada.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@pada.errors.count, "error") %> prohibited this pada from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @pada.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :word, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :word, :class => 'form-control' %>
    </div>
    <%=f.error_span(:word) %>
  </div>
  <div class="form-group">
    <%= f.label :meaning, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :meaning, :class => 'form-control' %>
    </div>
    <%=f.error_span(:meaning) %>
  </div>
  <div class="form-group">
    <%= f.label :pos, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :pos, :class => 'form-control' %>
    </div>
    <%=f.error_span(:pos) %>
  </div>
  <div class="form-group">
    <%= f.label :language_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :language_id, :class => 'form-control' %>
    </div>
    <%=f.error_span(:language_id) %>
  </div>
  <div class="form-group">
    <%= f.label :meaning_language_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :meaning_language_id, :class => 'form-control' %>
    </div>
    <%=f.error_span(:meaning_language_id) %>
  </div>
  <div class="form-group">
    <%= f.label :dictionary_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :dictionary_id, :class => 'form-control' %>
    </div>
    <%=f.error_span(:dictionary_id) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                padas_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
