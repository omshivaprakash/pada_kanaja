<div class="main-search">
  <div class="intoduction-text">
    <p align="center">
        <h2> <%= t(:pada_kanaja) %> </h2>
    </p>
  </div>
  <hr />
  <div class="form-group main-search-field">
    <%= form_tag root_path, method: :get do %>
    <%= search_field_tag "search" ,params[:search], autofocus: params[:search] ? false : true , class: 'form-control kan-ime', placeholder: "#{t(:huduku)}" %>
    <% end %>
  </div>
  <hr />
</div>


<% if @words && @words.count > 0 %>
<div class="word-lists"> 
  <table class="table table-striped">
  <thead>
    <tr>
      <th>  <%= t(:word)  %> </th>
      <th>  <%= t(:meaning)  %> </th>
      <th> <%= t(:dictionary) %> </th>
    </tr>
  </thead>
  <tbody>
    <% @words.each do |word| %>
    <tr>
      <td>
        <%= word.word %>
      </td>
      <td>
        <%= word.meaning %>
      </td>
      <td>
        <%= word.dictionary.name %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
</div>
<% end %>